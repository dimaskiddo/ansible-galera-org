[mysqld]
bind-address = {{ galera_ip }}
{% if galera_version_major | int > 10 or (galera_version_major | int == 10 and galera_version_minor | int >= 3) %}
{%  if groups['galera_lb'] | length > 0 %}
proxy-protocol-networks = {% for all_host in groups['all'] %}{{ hostvars[all_host].galera_ip }}{% if not loop.last %},{% endif %}{% endfor %}
{%  endif %}
{% endif %}

skip_name_resolve
